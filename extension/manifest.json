{
  "manifest_version": 3,
  "name": "Graphiti â€” Pubky URL Tagger",
  "description": "Tag and publish deterministic Pubky link posts with a Franky-flavoured Chrome sidebar and popup.",
  "version": "0.3.0",
  "action": {
    "default_title": "Graphiti",
    "default_popup": "popup/popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/franky.css",
        "popup/popup.css",
        "sidepanel/sidepanel.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
